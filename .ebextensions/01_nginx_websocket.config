files:
  "/etc/nginx/conf.d/01_websocket.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # WebSocket support for Streamlit
      map $http_upgrade $connection_upgrade {
        default upgrade;
        '' close;
      }

      upstream streamlit {
        server 127.0.0.1:8000;
        keepalive 64;
      }

container_commands:
  01_remove_default_config:
    command: "rm -f /tmp/deployment/config/#etc#nginx#conf.d#00_elastic_beanstalk_proxy.conf /etc/nginx/conf.d/00_elastic_beanstalk_proxy.conf || true"

  01_create_proxy_conf:
    command: |
      # Create a proper proxy configuration for the main location blocks
      cat > /tmp/proxy.conf << 'EOF'
      # Proxy settings common for all locations
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection $connection_upgrade;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_buffering off;
      proxy_read_timeout 86400;
      EOF
  
  02_create_streamlit_location:
    command: |
      # Create the specific location configuration for Streamlit
      cat > /tmp/streamlit_location.conf << 'EOF'
      # Main location block for Streamlit
      location / {
        include /tmp/proxy.conf;
        proxy_pass http://streamlit;
      }
      
      # Special WebSocket endpoint
      location /_stcore/stream {
        include /tmp/proxy.conf;
        proxy_pass http://streamlit/_stcore/stream;
      }
      EOF

  03_create_nginx_conf:
    command: |
      # Create a custom Nginx configuration file
      cat > /etc/nginx/conf.d/elasticbeanstalk/00_application.conf << 'EOF'
      include /tmp/streamlit_location.conf;
      EOF